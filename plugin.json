{
  "name": "team-seokan",
  "version": "2.1.0",
  "description": "15개 짱구 캐릭터 에이전트 + 토론 시스템 + 자기학습 메모리 시스템",
  "main": "dist/index.js",
  "author": "seokan",
  "homepage": "https://github.com/seokan/team-seokan",
  "claude": {
    "minVersion": "1.0.0"
  },
  "capabilities": {
    "agents": true,
    "hooks": true,
    "tools": true,
    "skills": true,
    "mcp": true,
    "memory": true
  },
  "settings": {
    "defaultModel": "sonnet",
    "maxConcurrentAgents": 5,
    "maxRetries": 3,
    "contextWarningThreshold": 50,
    "enableRalphLoop": true,
    "enableTodoEnforcer": true,
    "enableIntentGate": true,
    "enableReviewerCheck": true,
    "language": "ko"
  },
  "features": {
    "memory": {
      "description": "사용할수록 똑똑해지는 자기학습 시스템",
      "storage": ["~/.team-seokan/memories/", ".team-seokan/memories/"],
      "categories": ["preference", "pattern", "context", "mistake", "decision", "convention", "insight"]
    },
    "reflection": {
      "description": "작업 완료 후 자동 회고",
      "depths": ["simple", "standard", "deep"]
    },
    "bootstrap": {
      "description": "프로젝트 첫 실행 시 자동 분석",
      "includes": ["conventions", "patterns", "best-practices"]
    }
  }
}
